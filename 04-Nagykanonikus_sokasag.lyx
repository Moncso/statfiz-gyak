\begin_inset Formula 
\begin{equation}
Z_{1}=\frac{1}{h^{3}}\int\mathrm{d}^{3}p\mathrm{d}^{3}r\mathrm{e}^{-\beta\frac{p^{2}}{2m}}=V\left(\frac{2\pi m}{\beta h}\right)^{3/2}.
\end{equation}

