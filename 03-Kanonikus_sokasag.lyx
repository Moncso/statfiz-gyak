\begin_layout Standard
\begin_inset Formula 
\begin{equation}
E_{0}=-\varepsilon,\quad E_{1}=0
\end{equation}

\end_inset

Az 
\begin_inset Formula $E_{1}$
\end_inset

nívó 
\begin_inset Formula $g$
\end_inset

-szeresen degenerált 
\begin_inset Formula 
\begin{equation}
Z=\left(g+\mathrm{e}^{\beta\varepsilon}\right)^{N}
\end{equation}

\end_inset


\begin_inset Formula 
\begin{equation}
F=-k_{\mathrm{B}}T\ln Z=-k_{\mathrm{B}}TN\ln\left(g+\mathrm{e}^{\beta\varepsilon}\right)
\end{equation}

\end_inset


\begin_inset Formula 
\begin{equation}
E=-\frac{\partial}{\partial\beta}\ln Z=-N\frac{\partial}{\partial\beta}\ln\left(g+\mathrm{e}^{\beta\varepsilon}\right)=-N\varepsilon\frac{\mathrm{e}^{\beta\varepsilon}}{\left(g+\mathrm{e}^{\beta\varepsilon}\right)}
\end{equation}

\end_inset


\begin_inset Formula 
\begin{equation}
T\rightarrow0,\beta\rightarrow\infty,\quad E=-N\varepsilon
\end{equation}

\end_inset


\begin_inset Formula 
\begin{equation}
T\rightarrow\infty,\beta\rightarrow0,\quad E=-N\varepsilon\frac{1}{\left(g+1\right)}
\end{equation}

\end_inset


\begin_inset Formula 
\begin{equation}
S=-\left.\frac{\partial F}{\partial T}\right|_{V,N}=\frac{E-F}{T}=k_{\mathrm{B}}N\ln\left(g+\mathrm{e}^{\beta\varepsilon}\right)-\frac{N\varepsilon}{T}\frac{\mathrm{e}^{\beta\varepsilon}}{\left(g+\mathrm{e}^{\beta\varepsilon}\right)}
\end{equation}

\end_inset


\begin_inset Formula 
\begin{equation}
T\rightarrow0,\beta\rightarrow\infty,\quad S=-N\varepsilon
\end{equation}

\end_inset


\begin_inset Formula 
\begin{equation}
T\rightarrow\infty,\beta\rightarrow0,\quad S=k_{\mathrm{B}}N\ln\left(g+1\right)
\end{equation}

\end_inset


